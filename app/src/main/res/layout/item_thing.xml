<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin16dp"
    android:layout_marginLeft="@dimen/margin16dp"
    android:layout_marginEnd="@dimen/margin16dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin6dp"
    android:paddingBottom="@dimen/margin6dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        tools:text="Title #1" />

    <TextView
        android:id="@+id/sign1Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginLeft="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin6dp"
        tools:text="Category 1 : Name 1" />

    <TextView
        android:id="@+id/sign2Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginLeft="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin6dp"
        tools:text="Category 2 : Name 2" />

    <TextView
        android:id="@+id/sign3Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_marginLeft="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin6dp"
        tools:text="Category 3 : Name 3" />

</LinearLayout>